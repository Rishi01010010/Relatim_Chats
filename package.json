{
  "name": "relatim-chat",
  "version": "1.0.0",
  "description": "WhatsApp-style messaging app with MERN stack and PostgreSQL",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "messaging",
    "chat",
    "mern",
    "postgresql"
  ],
  "author": "Relatim Chat",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "pg": "^8.16.3"
  }
}
